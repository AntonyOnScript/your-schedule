<%- include('./includes/header.ejs') %>
<%- include('./includes/navbar.ejs') %>
<style>

    input {
        width: 300px;
        padding: 10px;
    }

</style>
<%- include('./includes/messages.ejs') %>
<h1 class="text-center w-100 mt-5 mb-5">Your Schedule</h1>

<div class="d-flex flex-row mw-100 container gap-5 mt-5 justify-content-center">

    <div>
        <h3>Login</h3>

        <form action="/login" method="post">

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="text" placeholder="Your Email" name="email" class="mt-4"><br>
            <input type="text" placeholder="Your Pass" name="password" class="mt-3"><br>

            <button type="submit" class="mt-4 btn btn-success">Log In</button>

        </form>
    </div>

    <div>
        <h3>Register</h3>

        <form action="/sign-up" method="post">

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="text" placeholder="Your Email" class="mt-4"  name="email"><br>
            <input type="text" placeholder="Your Pass"  class="mt-3" name="password"><br>

            <button type="submit" class="mt-4 btn btn-success">Register</button>

        </form>
    </div>

</div>

<%- include('./includes/footer.ejs') %>