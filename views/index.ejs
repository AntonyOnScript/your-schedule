<%- include('./includes/header.ejs') %>
<%- include('./includes/navbar.ejs') %>
<h1 class="text-center w-100 mt-5">Your Schedule</h1>

<table class="table mt-5 container" style="background: #dddddd;">

    <thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Telephone</th>
        <th scope="col">Email</th>
        <th scope="col">Description</th>
        <th scope="col">Methods</th>
    </tr>
    </thead>
    <tbody>
    <% contacts.forEach(contact => { %>
        <tr>
            <td><%= contact.name %></td>
            <td><%= contact.telephone %></td>
            <td><%= contact.email %></td>
            <td><%= contact.description %></td>
            <td>
                <a href="/contact/delete/<%= contact._id %>" class="btn btn-danger">Delete</a>
                <a href="/contact/<%= contact._id %>" class="btn btn-danger">Edit</a>
            </td>
        </tr>
    <% }) %>
    </tbody>

</table>

<% if(contacts.length === 0) { %>
    <div class="w-100 text-center mt-4">
        <span class="text-center">What about register a contact? <a class="btn btn-primary" href="/contact">Register contact</a></span>
    </div>
<% } %>    

<%- include('./includes/footer.ejs') %>