<%- include('./includes/header.ejs') %>
<%- include('./includes/navbar.ejs') %>

<%- include('./includes/messages.ejs') %>

<h1 class="text-center mt-5 mb-5">Contact</h1>

<% if(!contact._id) { %>
    <form action="/contact" class="w-100" method="post">
<% } else { %>
   <form action="/contact/update/<%= contact._id %>" class="w-100" method="post">
<% } %>
    <div class="d-flex flex-column gap-3 container">

        <input type="hidden" name="userId" value="<%= user._id %>">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <div class="d-flex flex-column">
            <label for="name">Name: </label>
            <input type="text" name="name" id="name" placeholder="name" value="<%= contact.name %>">
        </div>

        <div class="d-flex flex-column">
            <label for="telephone">Telephone: </label>
            <input type="text" name="telephone" id="telephone" placeholder="telephone" value="<%= contact.telephone %>">
        </div>

        <div class="d-flex flex-column">
            <label for="email">Email: </label>
            <input type="text" name="email" id="" placeholder="email" value="<%= contact.email %>">
        </div>

        <div class="d-flex flex-column">
            <label for="description">Description: </label>
            <textarea name="description" id="description" rows="3" placeholder="description"><%= contact.description %></textarea>
        </div>

        <button type="submit" class="text-center btn btn-success">Ok</button>

    </div>

</form>

<%- include('./includes/footer.ejs') %>